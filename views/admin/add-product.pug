extends ../layout/main_layout.pug

block styles
  <link href="/css/forms.css" rel="stylesheet" />
  
block content 
  form(action="/admin/add-product" method="POST")

    div.form-group.row.my-2
      label(for="name").col-sm-2.col-form-label Product Name
      div.col-sm-10
        input(type="text" name="name").form-control#name

    div.form-group.row.my-2
      label(for="price").col-sm-2.col-form-label Price
      div.col-sm-10
        input(type="text" name="price").form-control#price

    div.form-group.row.my-2
      label(for="imageUrl").col-sm-2.col-form-label Image
      div.col-sm-10
        input(type="text" name="imageUrl").form-control#imageUrl
    div.form-group.row.my-2
      label(for="categoryid").col-sm-2.col-form-label Category
      div.col-sm-10
        select.form-control#categoryid(name="categoryid")
          option(value="-1") Select Category
          each category in categories 
            option(value=`${category.id}`) #{category.name}
        
    div.form-group.row.my-2
      label(for="description").col-sm-2.col-form-label Description
      div.col-sm-10
        textarea.form-control(name="description" cols="30" rows="10")

    div.form-group.row.mt-3
      div.col-sm-10.offset-sm-2
        input(type="submit" value="Save Product").btn.btn-primary
